-- Fun√ß√£o para enviar as frases no chat
local function enviarFrases()
    while true do
        wait(5)  -- Envia uma frase a cada 5 segundos
        local frase = frases[math.random(1, #frases)]
        TextChatService:SendMessage(frase, Enum.ChatColor.Blue)
    end
end

task.spawn(enviarFrases)
