-- Fun√ß√£o para mudar a cor do texto "Created by: DenisBC" em RGB
local function efeitoRGB()
    local r, g, b = 255, 0, 0
    local passo = 5

    while true do
        wait(0.1)
        if r > 0 and b == 0 then
            r = r - passo
            g = g + passo
        elseif g > 0 and r == 0 then
            g = g - passo
            b = b + passo
        elseif b > 0 and g == 0 then
            b = b - passo
            r = r + passo
        end
        creatorLabel.TextColor3 = Color3.fromRGB(r, g, b)
    end
end

task.spawn(efeitoRGB)

-- Adicionando funcionalidade de arrastar a GUI
local dragging, dragInput, dragStart, startPos

dragBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

dragBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Temporizador
local tempoAtivo = 0

local function formatarTempo(segundos)
    local horas = math.floor(segundos / 3600)
    local minutos = math.floor((segundos % 3600) / 60)
    local segundos = segundos % 60
    return string.format("‚è∞ %02d:%02d:%02d", horas, minutos, segundos)
end

local function atualizarTemporizador()
    while true do
        wait(1)
        tempoAtivo = tempoAtivo + 1
        timerLabel.Text = formatarTempo(tempoAtivo)
    end
end

task.spawn(atualizarTemporizador)

-- Bot√µes Pause e Close
local pausado = false
pauseButton.MouseButton1Click:Connect(function()
    pausado = not pausado
    if pausado then
        pauseButton.Text = "Resume"
    else
        pauseButton.Text = "Pause"
    end
end)

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

